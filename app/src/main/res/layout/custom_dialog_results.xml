<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="7dp"
    android:background="@drawable/main_bgcolor">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1D6761">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:id="@+id/results_txtView"
            android:text="Sonuçlar"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textSize="23sp"/>


        <ImageView
            android:id="@+id/results_imgClose"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:onClick="results_imgClose"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
            android:src="@drawable/ic_close" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/results_txtView_trueAnswers"
            android:text="Doğru Cevap Sayısı : "
            android:textSize="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="15dp"
            android:textStyle="bold|italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/results_txtView_falseAnswers"
            android:text="Yanlış Cevap Sayısı : "
            android:textSize="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="15dp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/results_btnExit"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/results_txtView_falseAnswers"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/btn_bg"
            android:backgroundTint="@color/main_activity_btnColor"
            android:onClick="customDialog_saveBtnn"
            android:text="ÇIKIŞ"
            app:backgroundTint="@color/main_activity_btnColor" />


    </LinearLayout>



</LinearLayout>